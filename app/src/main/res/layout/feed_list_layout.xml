<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    android:id="@+id/cardview"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:id="@+id/feed_image"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            android:layout_height="110dp"
            android:src="@drawable/image"/>
        <TextView
            android:lines="3"
            android:layout_marginTop="10dp"
            android:id="@+id/feed_title"
            android:layout_marginRight="3dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/feed_image"
            android:text="This is Heading for this app"/>

        <TextView
            android:id="@+id/feed_discription"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/feed_image"
            android:text="This is discription for the title"
            android:layout_below="@+id/feed_title"/>


        <FrameLayout
            android:layout_below="@+id/feed_title"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/feed_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/feed_date"
                android:layout_alignRight="@+id/tvLike"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:textSize="10dp"
                android:text="Date"/>

           <!-- <TextView
                android:id="@+id/feed_tag"
                android:layout_alignRight="@+id/tvLike"
                android:drawableLeft="@drawable/ic_tag"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:textSize="10dp"
                android:text="Hindustan Times"/>-->

            <TextView
                android:id="@+id/feed_views"
                android:drawableLeft="@drawable/ic_views"
                android:drawablePadding="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:textSize="10dp"
                android:text="Views"/>
        </FrameLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>